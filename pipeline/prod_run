pipeline {
    agent {
  label 'ansible'
    }
    if(params.prod_run) {
        stages {
            stage('git') {
                steps {
                    git 'https://github.com/pnagibin/08-ansible-05-testing/'
                } 
            }
            stage('Molecule') {
                steps {
                    sh 'molecule test'
                } 
            }
        }
    }
    else {
         echo "Not equal - skipping the stage"
    }
}